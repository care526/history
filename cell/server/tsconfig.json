{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
		"baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@guards/*": ["guards/*"],
      "@interceptors/*": ["interceptors/*"],
      "@modules/*": ["modules/*"],
    }
  }
}
